{
	"name": "Youtube AutoCloser",
	"version": "1.0",
	"description": "Automagically close the current Youtube tab at the end of videos",
	"manifest_version": 2,

	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["yt-autocloser.js"]
		}
	],


	"icons": {
		"48": "icons/border-48.png"
	},

	"permissions": [
		"tabs",
		"activeTab",
		"tabHide"
	],

	"background": {
		"scripts": ["background.js"]
	}
}

